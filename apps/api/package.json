    "@prisma/client": "^3.7.0",
    "argon2": "^0.28.3",
    "date-fns": "^2.28.0",
    "directory-import": "^2.3.1",
    "dotenv": "^10.0.0",
    "env-var": "^7.1.1",
    "fast-jwt": "^1.4.1",
    "fastify": "^3.25.3",
    "fastify-cookie": "^5.5.0",
    "fastify-cors": "^6.0.2",
    "findup-sync": "^5.0.0",
    "graphql": "^16.2.0",
    "graphql-redis-subscriptions": "^2.4.2",
