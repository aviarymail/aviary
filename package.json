{
  "name": "aviary",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "clean": "yarn clean:dist && yarn clean:node_modules",
    "clean:dist": "find . -name \"dist\" -exec rm -rf '{}' +",
    "clean:node_modules": "find . -name \"node_modules\" -exec rm -rf '{}' +",
    "build": "turbo run build",
    "start": "turbo run start --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "fns": "yarn workspace fns",
    "web": "yarn workspace web",
    "graphql-server": "yarn workspace graphql-server",
    "cli": "yarn workspace @aviarymail/cli",
    "client": "yarn workspace @aviarymail/client",
    "db": "yarn workspace @aviarymail/db",
    "services": "yarn workspace @aviarymail/services"
  },
  "devDependencies": {
    "prettier": "^2.5.1",
    "rollup": "^2.64.0",
    "rollup-preset-solid": "^1.1.0",
    "turbo": "^1.0.28"
  },
  "resolutions": {
    "solid-start-node": "0.1.0-alpha.54"
  },
  "turbo": {
    "pipeline": {
      "start": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**"
        ]
      },
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**"
        ]
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false
      }
    }
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "installConfig": {
    "hoistingLimits": "workspaces"
  },
  "engines": {
    "yarn": ">=3.1.1",
    "node": ">=16.0.0"
  },
  "packageManager": "yarn@3.1.1"
}
