{
  "name": "aviary",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "private": true,
  "scripts": {
    "clean": "yarn clean:dist && yarn clean:node_modules",
    "clean:dist": "find . -name \"dist\" -exec rm -rf '{}' +",
    "clean:node_modules": "find . -name \"node_modules\" -exec rm -rf '{}' +",
    "build": "turbo run build",
    "start": "turbo run start --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "api": "yarn workspace api",
    "web": "yarn workspace web",
    "email-renderer": "yarn workspace @aviarymail/email-renderer",
    "email-primitives": "yarn workspace @aviarymail/email-primitives"
  },
  "devDependencies": {
    "prettier": "^2.5.1",
    "rollup": "^2.63.0",
    "rollup-preset-solid": "^1.0.1",
    "turbo": "^1.0.24"
  },
  "turbo": {
    "pipeline": {
      "start": {
        "dependsOn": ["^build"],
        "outputs": ["dist/**"]
      },
      "build": {
        "dependsOn": ["^build"],
        "outputs": ["dist/**"]
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false
      }
    }
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "installConfig": {
    "hoistingLimits": "workspaces"
  },
  "engines": {
    "yarn": ">=3.1.1",
    "node": ">=16.0.0"
  },
  "packageManager": "yarn@3.1.1"
}
