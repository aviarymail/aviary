{
  "name": "@aviarymail/mailblocks",
  "packageManager": "yarn@3.1.1",
  "scripts": {
    "start": "concurrently \"yarn start:server\" \"yarn start:css\"",
    "start:server": "nodemon ./src/server.js --watch src -e html,css,js",
    "start:css": "npx tailwindcss -i ./src/styles.css -o ./dist/styles.css --watch"
  },
  "dependencies": {
    "fastify": "^3.27.0",
    "handlebars": "^4.7.7",
    "nodemon": "^2.0.15"
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "fastify-static": "^4.5.0",
    "tailwindcss": "^3.0.18"
  }
}
